<p id="notice"><%= notice %></p>

<div class="searchbar">
  <%= search_form_for @q do |f| %>
   <%= f.label :name_cont %>
   <%= f.search_field :name_cont %>
   <%= f.submit %>
  <%end%>
</div>

<h1>Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Desription</th>
      <th>Price</th>
      <th>Category</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.desription %></td>
        <td><%= product.price %></td>
        <td><%= product.category %></td>
        <td><%= product.user_id %></td>
        <td><%= link_to 'Show', product_path(product.id) %></td>
        <% if current_user && current_user.admin %>
         <td><%= link_to 'Edit', edit_product_path(product) %></td>
         <td><%= button_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
